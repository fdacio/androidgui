		                        android:layout_height="wrap_content" >

		                        <TableRow
		                            android:id="@+id/trow7"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" >

		                            <TextView
		                                android:id="@+id/label2"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:paddingLeft="5dp"
		                                android:text="Nome:"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000000" />

		                            <TextView
		                                android:id="@+id/nomeCandidato"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="Nome"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000080" />

		                            <TextView
		                                android:id="@+id/msg1"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="Menssagem"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#FF0000" />
		                        </TableRow>
		                    </TableLayout>
		                </TableRow>

		                <TableRow
		                    android:id="@+id/trow8"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content" >

		                    <TableLayout
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" >

		                        <TableRow
		                            android:id="@+id/trow9"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" >

		                            <TextView
		                                android:id="@+id/label3"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:paddingLeft="5dp"
		                                android:text="Partido:"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000000" />

		                            <TextView
		                                android:id="@+id/partidoCandidato"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="Partido"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000080" />
		                        </TableRow>
		                    </TableLayout>
		                </TableRow>

		                <TableRow
		                    android:layout_width="wrap_content"
		                    android:layout_height="fill_parent" >

		                    <TableLayout
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" >

		                        <TableRow
		                            android:id="@+id/trow18"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" >

		                            <TextView
		                                android:id="@+id/label6"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:paddingLeft="5dp"
		                                android:text="Vice-prefeito(a):"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000000" />

		                            <TextView
		                                android:id="@+id/nomeVice"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="Vice"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000000" />
		                        </TableRow>
		                    </TableLayout>
		                </TableRow>

		                <TableRow
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content" >

		                    <TableLayout
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content" >

		                        <TableRow
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" >

		                            <TableLayout
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content" >

		                                <TableRow
		                                    android:layout_width="wrap_content"
		                                    android:layout_height="wrap_content" >

		                                    <TextView
		                                        android:id="@+id/msg2"
		                                        android:layout_width="wrap_content"
		                                        android:layout_height="wrap_content"
		                                        android:layout_marginLeft="10dp"
		                                        android:text="Msg2"
		                                        android:textAppearance="?android:attr/textAppearanceSmall"
		                                        android:textColor="#000000"
		                                        android:visibility="gone" />

		                                    <TextView
		                                        android:id="@+id/msg3"
		                                        android:layout_width="wrap_content"
		                                        android:layout_height="wrap_content"
		                                        android:layout_marginLeft="10dp"
		                                        android:text="Msg3"
		                                        android:textAppearance="?android:attr/textAppearanceSmall"
		                                        android:textColor="#000000" />
		                                </TableRow>
		                            </TableLayout>
		                        </TableRow>

		                        <TableRow
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" >

		                            <TextView
		                                android:id="@+id/msg4"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="10dp"
		                                android:text="Msg4"
		                                android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000000" />
		                        </TableRow>
		                    </TableLayout>
		                </TableRow>
		            </TableLayout>

		        </TableRow>
