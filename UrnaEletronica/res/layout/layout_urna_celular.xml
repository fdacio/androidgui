	                        android:width="30dp" />
	
	                    <Button
	                        android:id="@+id/bt2"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="2"
	                        android:width="30dp" />
	
	                    <Button
	                        android:id="@+id/bt3"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="3"
	                        android:width="30dp" />
	                </TableRow>
	
	                <TableRow
	                    android:id="@+id/trow11"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dp" >
	
	                    <Button
	                        android:id="@+id/bt4"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="4"
	                        android:width="20dp" />
	
	                    <Button
	                        android:id="@+id/bt5"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="5"
	                        android:width="20dp" />
	
	                    <Button
	                        android:id="@+id/bt6"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="6"
	                        android:width="20dp" />
	                </TableRow>
	
	                <TableRow
	                    android:id="@+id/trow12"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dp" >
	
	                    <Button
	                        android:id="@+id/bt7"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="7"
	                        android:width="20dp" />
	
	                    <Button
	                        android:id="@+id/bt8"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="8"
	                        android:width="20dp" />
	
	                    <Button
	                        android:id="@+id/bt9"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="9"
	                        android:width="20dp" />
	                </TableRow>
	
	                <TableRow
	                    android:id="@+id/trow13"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dp"
	                    android:gravity="center" >
	
	                    <Button
	                        android:id="@+id/bt0"
	                        android:layout_width="match_parent"
	                        android:layout_height="40dp"
	                        android:text="0"
	                        android:width="20dp" />
	                </TableRow>
	
	                <TableRow
	                    android:id="@+id/trow14"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent" >
	
	                    <Button
	                        android:id="@+id/bt_branco"
	                        android:layout_width="100dp"
	                        android:layout_height="40dp"
	                            android:text="Branco"
	                        android:width="20dp" 
	                        android:background="#FFFFFF"/>
	
	                    <Button
	                        android:id="@+id/bt_corrige"
	                        android:layout_width="100dp"
	                        android:layout_height="40dp"
	                        android:text="Corrige"
	                        android:width="20dp" 
	                        android:background="#FFA500"/>
	
	                    <Button
	                        android:id="@+id/bt_confirma"
	                        android:layout_width="100dp"
	                        android:layout_height="40dp"
	                        android:text="Confirma"
	                        android:width="20dp"
	                        android:background="#228B22" />
	                </TableRow>
	            </TableLayout>
	
	            <!-- FIM DO LAYOUT DO TECLADO -->
	
	
	            <!--
	                ***** FOTO *****  
	
			    	<ImageView
			    	    android:id="@+id/foto"
			    	    android:layout_margin="40dp"
			    	    android:layout_marginLeft="0dp"
			    	    android:layout_marginTop="0dp"
			    	    android:src="@drawable/foto_modelo" />
	            -->
	
	        </TableRow>
    
	    </TableLayout>
