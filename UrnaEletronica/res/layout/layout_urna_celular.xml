	            android:layout_marginTop="10dp" 
		        android:gravity="center_horizontal">
	
	            <!-- ******* INICIO DO LAYOUT DO TECLADO ****** -->
	
	            <TableLayout
	                android:id="@+id/tabela_teclado"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" >
	
